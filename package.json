{
  "name": "melody",
  "version": "4.0.0",
  "description": "An open source Discord bot for sharing Spotify presence to a given Discord channel.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "tsc && node .",
    "host": "tsc && pm2 start . --name Melody",
    "dev": "nodemon ./src/index.ts",
    "deploy:guild": "tsc && node ./dist/deploy.js guild",
    "deploy:global": "tsc && node ./dist/deploy.js global"
  },
  "author": "Zemyoro",
  "license": "UNLICENSED",
  "dependencies": {
    "@discordjs/rest": "^1.3.0",
    "@types/color-thief-node": "^1.0.1",
    "color-thief-node": "1.0.4",
    "discord-api-types": "^0.37.20",
    "discord.js": "13.8",
    "dotenv": "^16.0.3",
    "node-spotify-api": "^1.1.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "4.5"
  }
}
